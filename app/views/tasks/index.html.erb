<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task.id)  %> <%= link_to "edit", edit_path(task.id) %>
  <%= link_to "Delete", delete_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"} %></li>
  <% end %>
</ul>

<%= link_to "Create a new task", tasks_new_path %>
